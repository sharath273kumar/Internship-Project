@using ProjectManagement.Models

@model ProjectManagement.Models.Company
@{
    ViewBag.Title = "Add";
}

<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="@Url.Content("~/Content/assets/images/favicon.png")">
    <title>Monster Admin Template - The Most Complete & Trusted Bootstrap 4 Admin Template</title>
    <!-- Bootstrap Core CSS -->
    <link href="@Url.Content("~/Content/assets/plugins/bootstrap/css/bootstrap.min.css")" rel=" stylesheet">
    <!-- Custom CSS -->
    <link href="@Url.Content("~/Content/css/style.css")" rel="stylesheet">
    <!-- You can change the theme colors from here -->
    <link href="@Url.Content("~/Content/css/colors/blue.css")" id="theme" rel="stylesheet">
</head>
<body class="fix-header fix-sidebar card-no-border">
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader" style="display: none;">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"></circle>
        </svg>
    </div>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <div id="main-wrapper">
        <!-- ============================================================== -->
        <!-- Topbar header - style you can find in pages.scss -->
        <!-- ============================================================== -->
        <header class="topbar is_stuck" style="position: fixed; top: 0px; width: 1349px;">
            <nav class="navbar top-navbar navbar-toggleable-sm navbar-light">
                <!-- ============================================================== -->
                <!-- Logo -->
                <!-- ============================================================== -->
                <div class="navbar-header">
                    <a class="navbar-brand" href="index.html">
                        <!-- Logo icon -->
                        <b>
                            <!--You can put here icon as well // <i class="wi wi-sunset"></i> //-->
                            <!-- Dark Logo icon -->
                            <h3 class="dark-logo">PiedPiper Admin</h3>

                        </b>
                        <!--End Logo icon -->
                    </a>
                </div>
                <!-- ============================================================== -->
                <!-- End Logo -->
                <!-- ============================================================== -->
                <div class="navbar-collapse">
                    <!-- ============================================================== -->
                    <!-- toggle and nav items -->
                    <!-- ============================================================== -->
                    <ul class="navbar-nav mr-auto mt-md-0 ">
                        <!-- This is  -->
                        <li class="nav-item"> <a class="nav-link nav-toggler hidden-md-up text-muted waves-effect waves-dark" href="javascript:void(0)"><i class="ti-menu"></i></a> </li>

                    </ul>
                    <!-- ============================================================== -->
                    <!-- User profile and search -->
                    <!-- ============================================================== -->

                </div>
            </nav>
        </header>
        <!-- ============================================================== -->
        <!-- End Topbar header -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 100%;">
                <div class="scroll-sidebar" style="overflow: hidden; width: auto; height: 100%;">
                    <!-- Sidebar navigation-->
                    <nav class="sidebar-nav active">
                        <ul id="sidebarnav" class="in">
                            <li >
                                @Html.ActionLink("Dashboard", "DashBoard", new { @class = "waves-effect active" })
                            </li>
                            <li class="active">
                                <i class="fa fa-user m-r-10" aria-hidden="true"></i>@Html.ActionLink("Companies", "Companies", new { @class = "waves-effect" })
                            </li>
                            <li>
                                <i class="fa fa-table m-r-10" aria-hidden="true"></i>@Html.ActionLink("Clients", "Clients", new { @class = "waves-effect" })
                            </li>
                            <li>
                                <i class="fa fa-user m-r-10" aria-hidden="true"></i>@Html.ActionLink("Projects", "Projects", new { @class = "waves-effect" })
                            </li>
                            <li>
                                <i class="fa fa-table m-r-10" aria-hidden="true"></i>@Html.ActionLink("Tracking", "Track", new { @class = "waves-effect" })
                            </li>
                        </ul>

                    </nav>
                    <!-- End Sidebar navigation -->
                </div><div class="slimScrollBar" style="background: rgb(220, 220, 220); width: 5px; position: absolute; top: 0px; opacity: 0.4; display: none; border-radius: 7px; z-index: 99; left: 1px; height: 93.1843px;"></div><div class="slimScrollRail" style="width: 5px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 7px; background: rgb(51, 51, 51); opacity: 0.2; z-index: 90; left: 1px;"></div>
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!-- ============================================================== -->
        <!-- End Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper" style="min-height: 217px;">
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <div class="row page-titles">
                    <div class="col-md-6 col-8 align-self-center">
                        <h3 class="text-themecolor m-b-0 m-t-0">Profile</h3>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                            <li class="breadcrumb-item active">Profile</li>
                        </ol>
                    </div>                    
                </div>
                <!-- ============================================================== -->
                <!-- End Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <!-- Row -->
                <div class="row">
                    <!-- Column -->
                    
                    <!-- Column -->
                    <!-- Column -->
                    <div class="col-lg-8 col-xlg-9 col-md-7">
                        <div class="card">
                            <div class="card-block">                                
                                    @using(Html.BeginForm("Add", "Home", FormMethod.Post, new { @class = "form-horizontal form-material" ,enctype = "multipart/form-data"}))
                                    {
                                        <form>
                                            <div class="form-group">
                                                <label class="col-md-12">Company Name</label>
                                                <div class="col-md-12">
                                                    @Html.TextBoxFor(x => x.companyName, new { @class = "form-control form-control-line" })
                                                    @Html.ValidationMessageFor(x => x.companyName)
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-12">Company ID</label>
                                                <div class="col-md-12">
                                                    @Html.TextBoxFor(x => x.id, new { @class = "form-control form-control-line" })
                                                    @Html.ValidationMessageFor(x => x.id)
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-12">Company Type</label>
                                                <div class="col-md-12">
                                                    @Html.TextBoxFor(x => x.companyType, new { @class = "form-control form-control-line" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="example-email" class="col-md-12">Company CEO</label>
                                                <div class="col-md-12">
                                                    @Html.TextBoxFor(x => x.ceoName, new { @class = "form-control form-control-line" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-12">Headquarters</label>
                                                <div class="col-md-12">
                                                    @Html.TextBoxFor(x => x.headquarters, new { @class = "form-control form-control-line" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-12">Phone No</label>
                                                <div class="col-md-12">
                                                    @Html.TextBoxFor(x => x.phoneNumber, new { @class = "form-control form-control-line" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-12">Email</label>
                                                <div class="col-md-12">
                                                    @Html.TextBoxFor(x => x.email, new { @class = "form-control form-control-line" })
                                                    @Html.ValidationMessageFor(x => x.email)
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-12">Total Project Record</label>
                                                <div class="col-sm-12">
                                                    @Html.TextBoxFor(x => x.totalProjects, new { @class = "form-control form-control-line" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-12">Ongoing Projects</label>
                                                <div class="col-sm-12">
                                                    @Html.TextBoxFor(x => x.pendingProjects, new { @class = "form-control form-control-line" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-12">Picture</label>
                                                <div class="col-sm-12">
                                                    <input type="file" name="filee" style="width: 100%;" class="form-control form-control-line" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-sm-12">
                                                    <input type="submit" value="Add" class="btn btn-success" />
                                                        <input type="button" value="Cancel" onclick="location.href='@Url.Action("Companies", "Home")'" class="btn pull-right hidden-sm-down btn-success" />                                     
                                                </div>
                                            </div>
                                        </form>
                                        
                                    }
                                <!--Form Close-->
                            </div>
                        </div>
                    </div>
                    <!-- Column -->
                </div>
                <!-- Row -->
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <footer class="footer text-center">
                © 2018 Client Manager by Sharath Kumar
            </footer>
            <!-- ============================================================== -->
            <!-- End footer -->
            <!-- ============================================================== -->
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- All Jquery -->
    <!-- ============================================================== -->
    <script src="../Content/assets/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="../Content/assets/plugins/bootstrap/js/tether.min.js"></script>
    <script src="../Content/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="js/jquery.slimscroll.js"></script>
    <!--Wave Effects -->
    <script src="js/waves.js"></script>
    <!--Menu sidebar -->
    <script src="js/sidebarmenu.js"></script>
    <!--stickey kit -->
    <script src="../Content/assets/plugins/sticky-kit-master/dist/sticky-kit.min.js"></script>
    <!--Custom JavaScript -->
    <script src="js/custom.min.js"></script>
    <!-- ============================================================== -->
    <!-- This page plugins -->
    <!-- ============================================================== -->
    <!-- Flot Charts JavaScript -->
    <script src="../Content/assets/plugins/flot/jquery.flot.js"></script>
    <script src="../Content/assets/plugins/flot.tooltip/js/jquery.flot.tooltip.min.js"></script>
    <script src="js/flot-data.js"></script>
    <!-- ============================================================== -->
    <!-- Style switcher -->
    <!-- ============================================================== -->
    <script src="../Content/assets/plugins/styleswitcher/jQuery.style.switcher.js"></script>
    <div class="flotTip" style="position: absolute; background: rgb(255, 255, 255); z-index: 1040; padding: 0.4em 0.6em; border-radius: 0.5em; font-size: 0.8em; border: 1px solid rgb(17, 17, 17); white-space: nowrap; left: 778px; top: 571.813px; display: none;"></div>
</body>
</html>
